<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CoMiller" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <style name="TextInputLayout.EditText.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/ebony_clay</item>
        <item name="android:textColorHint">@color/ebony_clay</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="TextInputLayout.EditText.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/ebony_clay</item>
        <item name="android:textColorHint">@color/ebony_clay</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="strokeColor">@color/black</item>

    </style>

    <style name="CardsTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="Theme.CoMiller.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CoMiller.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CoMiller.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>